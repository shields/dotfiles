{
  "includeCoAuthoredBy": false,
  "permissions": {
    "deny": ["Bash(git commit --no-verify:*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "claude_post_edit_hook.sh"
          }
        ]
      }
    ]
  }
}
