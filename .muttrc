set mbox_type = Maildir
set spoolfile = ~/Maildir

set pager_index_lines = 12

unignore Date:
ignore Mail-Copies-To:
ignore Thread-		# some Outlook thing
ignore User-Agent:
#"^X-Apparently-To: .*@yahoogroups\.com")
ignore X-Barracuda-
#"^X-Bogosity: No,")
ignore X-DCC-
ignore X-DSPAM-
ignore X-eGroups-
ignore X-Habeas-
ignore X-LYRIS-Message-Id:
ignore X-Mailer:
ignore X-Newsreader:
ignore X-NNTP-Posting-Date:
ignore X-Spam-Checker-Version:
#"^X-Spam-Status: No, hits=-")
#"^X-Spam-Status: No, hits=[0-2]\\.")
ignore X-Yahoo-Profile:
ignore X-No-Archive:
ignore Mailing-List:
ignore List-
ignore DKIM-Signature:

#macro index $ "<delete-message><pipe-message>dspam --source=error --class=spam\n"
#macro pager $ "<delete-message><pipe-message>dspam --source=error --class=spam\n"
#macro index % "<delete-message><pipe-message>dspam --source=error --class=innocent\n"
#macro pager % "<delete-message><pipe-message>dspam --source=error --class=innocent\n"
macro index,pager $ "<save-message>~/Mail/retrain-spam<enter><enter>"
macro index,pager % "<save-message>~/Mail/retrain-innocent<enter><enter>"
# temp:
macro index,pager ( "<save-message>~/Mail/train-spam<enter><enter>"
macro index,pager ) "<save-message>~/Mail/train-innocent<enter><enter>"

set date_format = "%Y-%m-%d %H:%M:%S"
set index_format = "%4C %Z %{%b %D} %-25.25F %s"
set move = no

set use_from = yes
my_hdr Organization: Mad Science Research Labs

set delete = yes

set edit_headers = yes

set encode_from = yes

set envelope_from = yes

set followup_to = no
set reply_to = yes

set history = 100

set fast_reply = yes
set include = yes
set header = yes

set ispell = "aspell"

set mime_forward = yes

set pgp_replyencrypt = yes
set pgp_replysign = yes
set pgp_replysignencrypted = yes

set pgp_show_unusable = no

set reverse_alias = yes

set tilde = yes

set editor = "vi +/^$/ +j"

set record = "~/outbound-mail"
