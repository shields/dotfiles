[user]
	name = Michael Shields
[init]
	defaultBranch = main
[core]
	# less -FRX is the git default, but only if you have not set $LESS.
	pager = less -FRX

	hooksPath = ~/.config/git/hooks
[alias]
	br = branch
	branch-name = !git rev-parse --abbrev-ref HEAD
	c = commit
	ca = commit -a
	co = checkout
	cob = checkout -b
	d = diff
	p = status
	por = !git push -u origin $(git branch-name)
[pull]
	# Merge instead of rebasing to be consistent with GitHub web UI.
	rebase = false
[advice]
	detachedHead = false
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
	autoupdate = true
[color "diff"]
	# These are poorly documented, but can be found at the top of git/diff.c.
	commit = bold blue
	meta = brightcyan
	frag = dim brightcyan
	func = brightcyan
	context = dim black
	oldMoved = magenta      # Standard color, but not bold.
	newMoved = cyan         # Same.
